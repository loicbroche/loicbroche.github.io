		"Race": {
		  ".validate": "newData.isString() && 0 < newData.val().length && newData.val().length <= 50"
		},
		"Name": {
		  ".validate": "newData.isString() && 0 < newData.val().length && newData.val().length <= 50"
		},
		"OV": {
